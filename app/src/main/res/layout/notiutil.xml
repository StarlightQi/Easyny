<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".notiutil.NotiUtil">
    <easyny.ludashen.com.easyny.view.TitlebarView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:centerTitle="趣味通知"
        app:centerTextColor="#FFF"
        app:leftTextColor="#FFF"
        app:leftText="关闭"
        app:rightText="开启权限"
        app:rightTextColor="#FFF"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/tit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="标题"
            android:background="@drawable/shae" />
        <EditText
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:hint="请输入内容"
            android:gravity="top"
            android:background="@drawable/shae" />
        <Button
            android:text="正常通知"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/simple" />
        <Button
            android:text="文本通知"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bigtext" />
        <ImageButton
            android:id="@+id/picsrc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/xiangche"
            />
        <Button
            android:text="图片通知"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pic" />
        <EditText
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="请输入内容"
            android:gravity="top"
            android:background="@drawable/shae" />
        <EditText
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="请输入内容"
            android:gravity="top"
            android:background="@drawable/shae" />
        <EditText
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="请输入内容"
            android:gravity="top"
            android:background="@drawable/shae" />
        <EditText
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="请输入内容"
            android:gravity="top"
            android:background="@drawable/shae" />
        <EditText
            android:id="@+id/t5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="请输入内容"
            android:gravity="top"
            android:background="@drawable/shae" />
        <Button
            android:text="多信息通知"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mailbox" />
    </LinearLayout>
    </ScrollView>

</LinearLayout>
